<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/lead_trip_button_image"
        android:layout_width="374dp"
        android:layout_height="85dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="Image Button"
        android:focusable="true"
        android:onClick="startTripButton"
        android:src="@drawable/lead_button"
        app:layout_constraintBottom_toTopOf="@+id/follow_trip_button_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_on_lead_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:fontFamily="@font/brandink_sans"
        android:text="Start Trip"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/lead_trip_button_image"
        app:layout_constraintEnd_toEndOf="@+id/lead_trip_button_image"
        app:layout_constraintStart_toStartOf="@+id/lead_trip_button_image"
        app:layout_constraintTop_toTopOf="@+id/lead_trip_button_image" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="248dp"
        android:layout_height="78dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/brandink_sans"
        android:text="Follow"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="77dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/brandink_sans"
        android:text="Me"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/red_arrow" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/map_image" />

    <ImageView
        android:id="@+id/follow_trip_button_image"
        android:layout_width="373dp"
        android:layout_height="83dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="Image Button"
        android:focusable="true"
        android:src="@drawable/follow_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_on_follow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:fontFamily="@font/brandink_sans"
        android:onClick="followTripButton"
        android:text="Follow Trip"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/follow_trip_button_image"
        app:layout_constraintEnd_toEndOf="@+id/follow_trip_button_image"
        app:layout_constraintStart_toStartOf="@+id/follow_trip_button_image"
        app:layout_constraintTop_toTopOf="@+id/follow_trip_button_image" />

</androidx.constraintlayout.widget.ConstraintLayout>